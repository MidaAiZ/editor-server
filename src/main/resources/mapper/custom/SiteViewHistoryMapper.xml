<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mida.chromeext.modules.dao.SiteViewHistoryDAO">
    <insert id="insertSelectiveWithUUID" parameterType="com.mida.chromeext.modules.pojo.SiteViewHistory">
        insert into site_view_histories
        <trim prefix="(" suffix=")" suffixOverrides=",">
            hid,
            <if test="ip != null">
                ip,
            </if>
            <if test="userId != null">
                user_id,
            </if>
            <if test="siteId != null">
                site_id,
            </if>
            <if test="siteTitle != null">
                site_title,
            </if>
            <if test="siteUrl != null">
                site_url,
            </if>
            <if test="browserUa != null">
                browser_ua,
            </if>
            <if test="countryCode != null">
                country_code,
            </if>
            <if test="createdAt != null">
                created_at,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            #{hid,jdbcType=VARCHAR},
            <if test="ip != null">
                #{ip,jdbcType=VARCHAR},
            </if>
            <if test="userId != null">
                #{userId,jdbcType=INTEGER},
            </if>
            <if test="siteId != null">
                #{siteId,jdbcType=INTEGER},
            </if>
            <if test="siteTitle != null">
                #{siteTitle,jdbcType=VARCHAR},
            </if>
            <if test="siteUrl != null">
                #{siteUrl,jdbcType=VARCHAR},
            </if>
            <if test="browserUa != null">
                #{browserUa,jdbcType=VARCHAR},
            </if>
            <if test="countryCode != null">
                #{countryCode,jdbcType=VARCHAR},
            </if>
            <if test="createdAt != null">
                #{createdAt,jdbcType=TIMESTAMP},
            </if>
        </trim>
    </insert>

    <select id="listDailyViewCount" resultType="com.mida.chromeext.modules.vo.statistic.StatisticCountVo">
        SELECT date(created_at) as `name` , count(1) as count FROM `site_view_histories`
        where
        <![CDATA[ created_at >= #{beginTime}]]>
        <if test="endTime != null">
            and <![CDATA[ created_at <= #{endTime} ]]>
        </if>
        GROUP BY date(created_at)
    </select>

    <select id="listMonthlyViewCount" resultType="com.mida.chromeext.modules.vo.statistic.StatisticCountVo">
        SELECT DATE_FORMAT(created_at,'%Y-%m') as `name` , count(1) as count FROM `site_view_histories`
        where
        <![CDATA[ created_at >= #{beginTime}]]>
        <if test="endTime != null">
            and <![CDATA[ created_at <= #{endTime} ]]>
        </if>
        GROUP BY DATE_FORMAT(created_at,'%Y-%m')
    </select>


</mapper>